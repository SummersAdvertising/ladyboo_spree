<div id="blog_entry_container">
  <% if !@news_entries.empty? %>
    <%= link_to_previous_page @news_entries, '<', param_name: :news_page %>
    <%= link_to_next_page @news_entries, '>', param_name: :news_page %>
    <%#= paginate @news_entries, param_name: :news_page %>
    <ul id="blog_entry_entries">
      <% @news_entries.each do |blog_entry| %>
        <li>
          <%= render :partial => 'spree/blog_entries/blog_entry', :locals => {:blog_entry => blog_entry} %>
        </li>
      <% end %>
    </ul>
  
  <% else %>
    <p id="no_entries"><%= Spree.t(:no_blog_entries) %></p>
  <% end %>
</div>  